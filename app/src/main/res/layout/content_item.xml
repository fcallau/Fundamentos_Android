<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_margin="@dimen/default_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/max_height_image_content_item"
            android:maxWidth="@dimen/max_width_image_content_item"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_of_the_item" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_image"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="@dimen/item_name_text_size" />

        <LinearLayout
            android:id="@+id/allergen_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/item_image"
            android:layout_alignBottom="@+id/item_image"
            android:paddingLeft="@dimen/small_margin">
            <TextView
                android:id="@+id/allergen_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:textSize="@dimen/allergen_text_text_size" />
            <ImageView
                android:id="@+id/cellery_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/cereals_containing_gluten_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/crustaceans_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/eggs_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/fish_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/lupin_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/milk_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/molluscs_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/mustard_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/nuts_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/peanuts_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/sesame_seeds_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/soya_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
            <ImageView
                android:id="@+id/sulphur_dioxide_allergen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_between_allergens"
                android:baselineAlignBottom="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="@dimen/item_price_text_size" />

    </RelativeLayout>

</android.support.v7.widget.CardView>